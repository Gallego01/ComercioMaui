<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ComercioMaui.Views.AgregarRolPage"
             Title="Agregar Nuevo Rol">

    <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">

        <Label 
            Text="Registro de Rol"
            FontSize="Title"
            FontAttributes="Bold"
            HorizontalOptions="Center" />

        <BoxView HeightRequest="1" Color="LightGray" />

        <Entry 
            x:Name="NombreRolEntry"
            Placeholder="Escriba el nombre del rol (Ej: Administrador)"
            FontSize="Medium"
            Margin="0, 10, 0, 0" />

        <Button 
            Text="Guardar Rol"
            Clicked="OnGuardarClicked"
            CornerRadius="10"
            Margin="0, 20, 0, 0" />

        <Label
            x:Name="StatusLabel"
            TextColor="Red"
            HorizontalOptions="Center"
            FontAttributes="Italic"/>

        <Label Text="Roles existentes:" 
               FontAttributes="Bold" 
               Margin="0,20,0,0"/>

        <CollectionView x:Name="RolesCollectionView"
                        HeightRequest="350"
                        Margin="0,5,0,0">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray"
                           CornerRadius="5"
                           Padding="10"
                           Margin="0,5,0,0"
                           BackgroundColor="White">

                        <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10">
                            <Label Text="{Binding Nombre}" 
                                   FontSize="Medium"
                                   VerticalOptions="Center"/>

                            <Button Text="Borrar"
                                    BackgroundColor="DarkRed"
                                    TextColor="White"
                                    CornerRadius="5"
                                    Padding="5"
                                    Grid.Column="1"
                                    CommandParameter="{Binding}"
                                    Clicked="OnBorrarRolClicked"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ComercioMaui.Views.AgregarCategoriaPage"
             Title="Agregar Nueva Categoría">

    <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">

        <Label 
            Text="Registro de Categoría"
            FontSize="Title"
            FontAttributes="Bold"
            HorizontalOptions="Center" />

        <BoxView HeightRequest="1" Color="LightGray" />

        <Entry 
            x:Name="NombreCategoriaEntry"
            Placeholder="Escriba el nombre de la categoría (Ej: Electrónica)"
            FontSize="Medium"
            Margin="0, 10, 0, 0" />

        <Button 
            Text="Guardar Categoría"
            Clicked="OnGuardarClicked"
            CornerRadius="10"
            Margin="0, 20, 0, 0" />

        <Label
            x:Name="StatusLabel"
            TextColor="Red"
            HorizontalOptions="Center"
            FontAttributes="Italic"/>

    </VerticalStackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:ComercioMaui.Views"
             x:Class="ComercioMaui.Views.MainPage"
             Title="Panel de Control Principal">

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="25"
            HorizontalOptions="FillAndExpand">

            <Label
                Text="Menú Principal de Gestión"
                FontSize="Title"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Margin="0,20,0,10" />

            <BoxView HeightRequest="1" Color="{StaticResource Secondary}" Margin="0,5,0,5"/>

            <Label
                Text="Gestión de Inventario"
                FontSize="Medium"
                FontAttributes="Bold"
                Margin="0,10,0,0"/>

            <Button 
                Text="Agregar Nueva Categoría" 
                Clicked="OnGoToAgregarCategoriaClicked" 
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                CornerRadius="8"
                Padding="15"
                HorizontalOptions="Fill" />
            
            <Button
                Text="➕ Registrar Nuevo Producto"
                Clicked="OnGoToAgregarProductoClicked"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                CornerRadius="8"
                Padding="15"
                HorizontalOptions="Fill" />

            <Button
                Text="📋 Ver/Editar Inventario"
                Clicked="OnGoToVerProductosClicked"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                CornerRadius="8"
                Padding="15"
                HorizontalOptions="Fill" />

            <BoxView HeightRequest="1" Color="{StaticResource Secondary}" Margin="0,15,0,5"/>

            <Label
                Text="Gestión de Usuarios y Roles"
                FontSize="Medium"
                FontAttributes="Bold"
                Margin="0,10,0,0"/>

            <Button
                Text="👤 Gestión de Usuarios"
                BackgroundColor="Gray"
                TextColor="White"
                CornerRadius="8"
                Padding="15"
                HorizontalOptions="Fill" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>